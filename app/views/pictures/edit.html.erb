<h1>Edit picture</h1>

<form action= "http://localhost:3000/update_picture/<%= @picture_data.id %>">
  <div>
    <label for="the_caption">Caption:</label>
    <input id="the_caption" type="text" name="caption" value= "<%= @picture_data.caption %>">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" type="text" name="source" value= "<%= @picture_data.source %>">
  </div>
  <div>
    <input type="submit" value="Edit Pictures">
  </div>
</form>






